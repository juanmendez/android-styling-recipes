<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.juanmendez.stylingrecipes.MainActivity">

    <!--simple enough to change the tint color-->
    <ImageView
        android:src="@drawable/ic_signal_wifi_off_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorAccent" />

    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/ic_bike_24dp"
        android:tint="@color/colorAccent"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/ic_bike_24dp"
        android:tint="@color/colorAccent"/>


    <RadioGroup
        android:id="@+id/addressesLayout_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@drawable/walk_radiobtn"/>

        <RadioButton
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@drawable/walk_radiobtn"/>

        <RadioButton
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@drawable/walk_radiobtn"/>
    </RadioGroup>

    <Button android:id="@+id/dynamicIconBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="30dp"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:drawableLeft="@drawable/ic_walk_24dp"
        android:text="Walk"
        android:id="@+id/leftIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
